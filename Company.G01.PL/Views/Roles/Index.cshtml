@model IEnumerable<RolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>

<a asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />

<form action="/" method="post">
    <div class="row">
        <div class="col-8">
            <input type="text" name="InputSearch" class="form-control" />

        </div>
        <div class="col-4">
            <input type="submit" asp-action="Index" value="Search" class="btn btn-success" />

        </div>
    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@user.Id" />

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Roles :</h4>
    </div>
}
