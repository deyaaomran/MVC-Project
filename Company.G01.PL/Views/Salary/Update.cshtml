@model Salary
@{
    ViewData["Title"] = "Update";
    var employee = new SelectList(ViewData["Employee"] as IEnumerable<Employee>, nameof(Employee.id), nameof(Employee.id));
}

<h1>Update Salary</h1>
<br/>

<br/>

<form asp-action="Update">

    <div >
        <label  asp-for="Employee" value="Employee" class="col-form-control"></label>
        <input readonly asp-for="EmployeeId" class="form-control" />
@*         <select  asp-for="EmployeeId" asp-items="employee" class="form-control">
            <option value="" >@Model.EmployeeId</option>
        </select> *@
    </div>

    <div class="form-group">
        <label asp-for="BaseSalary" class="col-form-label"></label>
        <input asp-for="BaseSalary" class="form-control" />
        <span asp-validation-for="BaseSalary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bonus" class="col-form-label"></label>
        <input asp-for="Bonus" class="form-control" />
        <span asp-validation-for="Bonus" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Deductions" class="col-form-label"></label>
        <input asp-for="Deductions" class="form-control" />
        <span asp-validation-for="Deductions" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NetPay" class="col-form-label"></label>
        <input asp-for="NetPay" class="form-control" />
        <span asp-validation-for="NetPay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PayDate" class="col-form-label"></label>
        <input asp-for="PayDate" class="form-control" />
        <span asp-validation-for="PayDate" class="text-danger"></span>
    </div>
 
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-controller="Salary" asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section ValidtionRequest
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}