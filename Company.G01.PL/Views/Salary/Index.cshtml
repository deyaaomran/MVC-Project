@model IEnumerable<Salary>

@{
    ViewData["Title"] = "Index";
}

<h1>Salary</h1>
<br>
<br />


<a asp-asp-controller="Salary" asp-action="Create" class="btn btn-primary">Add Salary</a>
<br />
<br />
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>SalaryId</th>
                <th>EmployeeId</th>
                <th>BaseSalary</th>
                <th>Bonus</th>
                <th>Deductions</th>
                <th>NetPay</th>
                <th>PayDate</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var salary in Model)
            {
                <tr>
                    <td>@salary.id</td>
                    <td>@salary.EmployeeId</td>
                    <td>@salary.BaseSalary</td>
                    <td>@salary.Bonus</td>
                    <td>@salary.Deductions</td>
                    <td>@salary.NetPay</td>
                    <td>@salary.PayDate</td>

                    <partial name="_ButtonsPartialView" model="@salary.id.ToString()" />

                </tr>
            }
        </tbody>

    </table>
}
else
{

    <div class="alert alert-danger">
        <h4>There are not salary</h4>
    </div>
}

