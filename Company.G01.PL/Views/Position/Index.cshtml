@model IEnumerable<Position>

@{
    ViewData["Title"] = "Index";
}

<h1>All Position</h1>
<br></br>
<br />


<a asp-asp-controller="Position" asp-action="Create" class="btn btn-primary">Craete Position</a>
<br />
<br />
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>SalaryRange</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var position in Model)
            {
                <tr>
                    <td>@position.Title</td>
                    <td>@position.Description</td>
                    <td>@position.SalaryRange</td>
                    <partial name="_ButtonsPartialView" model="@position.id.ToString()" />

                </tr>
            }
        </tbody>

    </table>
}
else
{

    <div class="alert alert-danger">
        <h4>There are not Position</h4>
    </div>
}

