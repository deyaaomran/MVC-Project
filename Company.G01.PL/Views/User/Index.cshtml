@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>



<form action="/" method="post">
    <div class="row">
        <div class="col-8">
            <input type="text" name="InputSearch" class="form-control" />

        </div>
        <div class="col-4">
            <input type="submit" asp-action="Index" value="Search" class="btn btn-success" />
        </div>
    </div>

</form>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.id)</th>
                <th>@Html.DisplayNameFor(D => D.FirsName)</th>
                <th>@Html.DisplayNameFor(D => D.LastName)</th>
                <th>@Html.DisplayNameFor(D => D.Email)</th>
                <th>@Html.DisplayNameFor(D => D.Roles)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.id</td>
                    <td>@user.FirsName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    
                    <td>@string.Join(" ",user.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@user.id"/>

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning">
        <h4>There is No Users :</h4>
    </div>
}
