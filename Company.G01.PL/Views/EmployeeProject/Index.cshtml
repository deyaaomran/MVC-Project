@model IEnumerable<EmployeeProject>

@{
    ViewData["Title"] = "Index";
}

<h1>EmployeeProject</h1>
<br>
<br />


<a asp-asp-controller="EmployeeProject" asp-action="Create" class="btn btn-primary">Add EmployeeProject</a>
<br />
<br />
@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>EmployeeId</th>
                <th>ProjectId</th>
                <th>Role</th>
                <th>HoursWorked</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employeeProject in Model)
            {
                <tr>
                    <td>@employeeProject.EmployeeId</td>
                    <td>@employeeProject.ProjectId</td>
                    <td>@employeeProject.Role</td>
                    <td>@employeeProject.HoursWorked</td>
                    <partial name="_ButtonsPartialView" model="@employeeProject.id.ToString()" />

                </tr>
            }
        </tbody>

    </table>
}
else
{

    <div class="alert alert-danger">
        <h4>There are not EmployeeProject</h4>
    </div>
}

